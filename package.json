{
  "name": "stock-crypto-tracker",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "dev:mobile": "turbo dev --filter=mobile",
    "dev:webapp": "turbo dev --filter=web --filter=api",
    "db:init": "turbo db:init --filter=api",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "turbo": "^1.13.4",
    "@types/node": "^20.14.9",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
